---
import Container from "@/components/layout/Container.astro";
import ThemeSwitcher from "@/components/ThemeSwitcher.astro";

const links = [
  { href: "/posts", label: "Journal" },
  { href: "/travel", label: "Travel" },
  { href: "/ventures", label: "Ventures" },
  { href: "/library", label: "Library" },
  { href: "/about", label: "About" },
];
---

<div class="fixed top-0 left-0 right-0 z-40 py-8 backdrop-blur-sm">
  <Container>
    <nav class="flex items-center justify-between z-50">
      <div class="flex items-center gap-4">
        <a href="/" class="font-head font-bold text-lg text-[#7512F0] mr-4">
          <img
            src="/img/logo.svg"
            alt="Titus Gahissy"
            width="28"
            height="28"
            class="size-7 block dark:hidden"
          />
          <img
            src="/img/logo-dark.svg"
            alt="Titus Gahissy"
            width="28"
            height="28"
            class="size-7 hidden dark:block"
          />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div
        class="items-center gap-5 text-base tracking-wide font-semibold hidden md:flex"
      >
        {
          links.map((link) => (
            <a href={link.href} class="flex items-center gap-1">
              <span>{link.label}</span>
            </a>
          ))
        }
      </div>

      <div class="flex items-center gap-4">
        <ThemeSwitcher />

        <!-- Mobile Hamburger Button -->
        <button
          id="nav-toggle"
          type="button"
          class="flex mr-1 flex-col w-7 h-7 justify-center text-sm md:hidden relative"
          aria-label="Toggle navigation menu"
          aria-expanded="false"
        >
          <span
            id="hamburger-line-1"
            class="border-t w-7 border-foreground absolute transition-all duration-300 ease-[cubic-bezier(0.175,0.885,0.32,1.275)]"
            style="top: 8px;"></span>
          <span
            id="hamburger-line-2"
            class="border-t w-7 border-foreground absolute transition-all duration-300 ease-[cubic-bezier(0.175,0.885,0.32,1.275)]"
            style="top: 18px;"></span>
        </button>
      </div>
    </nav>
  </Container>
</div>

<!-- Mobile Navigation Overlay -->
<div
  id="mobile-nav"
  class="md:hidden fixed inset-0 bg-background z-30 px-6 flex flex-col justify-end pb-8 transition-all duration-300 ease-[cubic-bezier(0.175,0.885,0.32,1.275)] opacity-0 pointer-events-none"
  style="transform: translateY(100%);"
>
  <div class="flex flex-col gap-1 relative">
    {
      links.map((link) => (
        <a
          href={link.href}
          class="mobile-nav-link flex items-center gap-1 font-heading font-black text-6xl"
        >
          <span>{link.label}</span>
