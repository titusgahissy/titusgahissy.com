<script>
  function initNavbar() {
    const toggle = document.getElementById("nav-toggle");
    const mobileNav = document.getElementById("mobile-nav");
    const line1 = document.getElementById("hamburger-line-1");
    const line2 = document.getElementById("hamburger-line-2");
    const mobileLinks = document.querySelectorAll(".mobile-nav-link");
    let isOpen = false;

    function openNav() {
      isOpen = true;
      document.body.style.overflow = "hidden";
      toggle?.setAttribute("aria-expanded", "true");

      // Animate hamburger to X
      if (line1) {
        line1.style.top = "13px";
        line1.style.transform = "rotate(45deg)";
      }
      if (line2) {
        line2.style.top = "13px";
        line2.style.transform = "rotate(-45deg)";
      }

      // Show mobile nav
      if (mobileNav) {
        mobileNav.style.transform = "translateY(0)";
        mobileNav.style.opacity = "1";
        mobileNav.style.pointerEvents = "auto";
      }
    }

    function closeNav() {
      isOpen = false;
      document.body.style.overflow = "";
      toggle?.setAttribute("aria-expanded", "false");

      // Animate X back to hamburger
      if (line1) {
        line1.style.top = "8px";
        line1.style.transform = "rotate(0)";
      }
      if (line2) {
        line2.style.top = "18px";
        line2.style.transform = "rotate(0)";
      }

      // Hide mobile nav
      if (mobileNav) {
        mobileNav.style.transform = "translateY(100%)";
        mobileNav.style.opacity = "0";
        mobileNav.style.pointerEvents = "none";
      }
    }

    function toggleNav() {
      if (isOpen) {
        closeNav();
      } else {
        openNav();
      }
    }

    // Toggle button click
    toggle?.addEventListener("click", toggleNav);

    // Close on mobile link click
    mobileLinks.forEach((link) => {
      link.addEventListener("click", closeNav);
    });

    // Close on View Transitions navigation
    document.addEventListener("astro:before-swap", closeNav);
  }

  // Initialize on page load
  initNavbar();

  // Re-initialize after View Transitions navigation
  document.addEventListener("astro:after-swap", initNavbar);
</script>
